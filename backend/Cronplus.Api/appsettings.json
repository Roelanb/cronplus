{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/cronplus-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "AllowedHosts": "*",
  "DatabaseSettings": {
    "ConnectionString": "DataSource=cronplus.db",
    "EnableWalMode": true,
    "CreateIfNotExists": true
  },
  "CronplusSettings": {
    "MaxConcurrentTasksPerType": 5,
    "DefaultDebounceMs": 500,
    "DefaultStabilizationMs": 1000,
    "DeadLetterDirectory": "./dead-letter",
    "StateDirectory": "./state"
  },
  "Cors": {
    "Origins": [
      "http://localhost:5173",
      "http://localhost:3000"
    ]
  },
  "FileWatcher": {
    "MaxConcurrentWatchers": 100,
    "DefaultDebounceMs": 500,
    "DefaultStabilizationMs": 1000,
    "MaxQueueSize": 10000
  },
  "FileProcessor": {
    "QueueCapacity": 1000,
    "MaxConcurrentProcessing": 10
  },
  "JwtSettings": {
    "Secret": "YOUR_SUPER_SECRET_KEY_HERE_MINIMUM_32_CHARACTERS_LONG_FOR_SECURITY",
    "Issuer": "Cronplus",
    "Audience": "CronplusAPI",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  }
}