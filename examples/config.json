{
  "version": 1,
  "tasks": [
    {
      "id": "print-and-archive-1",
      "enabled": true,
      "watch": {
        "directory": "/tmp/cronplus/incoming",
        "glob": "*.pdf",
        "debounceMs": 0,
        "stabilizationMs": 0
      },
      "pipeline": [
        {
          "type": "print",
          "print": {
            "printerName": "fgggf",
            "copies": 1,
            "duplex": false,
            "timeoutSec": 60,
            "retry": {
              "max": 0,
              "backoffMs": 1000
            }
          }
        },
        {
          "type": "archive",
          "archive": {
            "destination": "/tmp/cronplus/archive",
            "preserveSubdirs": false,
            "conflictStrategy": "rename"
          }
        }
      ]
    },
    {
      "id": "copy-and-delete-1",
      "enabled": false,
      "watch": {
        "directory": "/tmp/cronplus/source",
        "glob": "*",
        "debounceMs": 500,
        "stabilizationMs": 1000
      },
      "pipeline": [
        {
          "type": "copy",
          "copy": {
            "destination": "/tmp/cronplus/dest",
            "atomic": true,
            "verifyChecksum": true,
            "retry": {
              "max": 3,
              "backoffMs": 1000
            }
          }
        },
        {
          "type": "archive",
          "archive": {
            "destination": "/tmp/cronplus/archive",
            "preserveSubdirs": false,
            "conflictStrategy": "rename"
          }
        },
        {
          "type": "delete",
          "delete": {
            "secure": false
          }
        }
      ]
    }
  ],
  "logging": {
    "level": "info"
  },
  "metrics": {
    "enablePrometheus": true,
    "listen": "127.0.0.1:9090"
  },
  "runtime": {
    "maxConcurrentPerTask": 2,
    "stateDbPath": "/tmp/cronplus/state/state.db",
    "deadLetterDir": "/var/lib/cronplus/dead"
  }
}